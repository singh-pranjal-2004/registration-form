<!DOCTYPE html>
<html>

<head>
    <title>Login Register App</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="./css/main.css">
    <style>
        body {
            background-image: url("https://images.unsplash.com/photo-1600891964599-f61ba0e24092?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D");
            /* background-color: rgb(0, 0, 0); */
            background-position: center;
            height: 100vh;
            background-size: cover;
            background-repeat: no-repeat;
            text-align: center !important;
        }

        p {
            margin-top: 20px;
            font-size: 30px;
        }

        input {
            text-align: center;
        }

        #LangTable {
            margin-bottom: 15px;
        }

        .form-card {
            background-color: rgba(0, 0, 0, 0.75);
            border: 2px solid white;
            padding: 20px;
            border-radius: 30px;
            display: flex;
            flex-direction: column;
            border-radius: 10px;
            margin-top: 130px;
        }

        .form-group input::placeholder {
            color: rgba(0, 0, 0, 0.534);
            font-size: 20px;
        }

        .form-group input:focus {
            border-color: violet;
            color: black;
            scale: 1.05;
        }

        .form-group input[type="text"],
        .form-group input[type="password"] {
            border: 2px solid violet;
            border-radius: 50px;
            height: 40px;
            width: 100%;
            max-width: 400px;
            margin: 0 auto;
            transition: 0.2s ease-out;
        }

        .btn-success {
            margin-top: 10px;
            background-color: green;
            color: white;
            font-size: 15px;
            font-weight: 600;
            padding: 5px 20px;
            border: 1px solid white;
            border-radius: 20px;
            transition: 0.2s ease-out;
        }

        .btn-success:hover {
            background-color: blueviolet;
            border-color: blueviolet;
        }

        .mssg {
            margin-top: 10px;
            text-align: center;
            background-color: transparent;
            color: red;
            font-size: 20px;
            margin-top: 5px;
            margin-bottom: 5px;
            border-radius: 5px;
        }

        .mssg span {
            color: #fff;
        }

        a {
            color: green;
            font-size: 15px;
            font-weight: 700;
        }

        a:hover {
            color: violet;
        }

        .form-card>div>p {
            color: white;
            font-size: 30px;
            margin: 20px;
        }

        .ar-log {
            color: white;
        }
    </style>
    <script type="text/javascript">
        $(document).ready(() => {

            $("#form2").submit((event) => {
                event.preventDefault();

                $.ajax({
                    type: 'POST',
                    url: '/forgetpass',
                    data: $('#form2').serialize(),
                    dataType: "json",
                    success: (response) => {
                        $('#form2')[0].reset();
                        document.getElementById("check").innerHTML = response.Success;

                        setTimeout(() => {
                            document.getElementById("check").innerHTML = "";
                        }, 3000);
                        if (response.Success == "Password changed!") {
                            document.getElementById("aa").click();
                        };
                    },
                    error: () => { }
                })
            });

        });
    </script>
</head>

<body>

    <div class="col-md-4 col-md-offset-4 form-card">
        <div>
            <p>Change Password</p>
        </div>
        <div class="form-group">
            <form id="form2" method="post">
                <input type="text" name="email" placeholder="E-mail" required="" class="form-control"><br />
                <input type="password" name="password" placeholder="Password" required="" class="form-control"><br />
                <input type="password" name="passwordConf" placeholder="Confirm Password" required=""
                    class="form-control"><br />
                <input type="submit" value="Change" class="btn btn-success">
            </form>
        </div>
        <div class="mssg bg-danger">
            <span id="check"></span>
        </div>
        <div id="LangTable"><a href="/login" id="aa"></a>
        </div>
        <div id="LangTable"><span class="ar-log">Go back to <a href="/">Register</a> or <a
                    href="/login">Login</a></span>
        </div>
    </div>

</body>

</html>